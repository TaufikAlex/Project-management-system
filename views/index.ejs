    <h1>Projects</h1>
    <h2>Filters</h2>
    <div class="container" style="padding-top: 20px">
    <form action="/" method="GET">       
      <input type="hidden" name="page" value="1" /> 
      <!---------Menampilkan box id------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" 
                type="checkbox" 
                name="cid"
                 />
                <label class="form-check-label">ID</label>
            </div>
        </div>
        <div class="col-sm-10">
            <div class="form-group">
                <input type="text" class="form-control" id="id" name="nmid"
                placeholder="ID"/>
            </div>
          </div>
    </div>
    <!---------Menampilkan box Nama------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" 
                type="checkbox" 
                name="cname"
                />Name
            </div>
        </div>
        <div class="col-sm-10">
            <div class="form-group">
                <input 
                type="text" 
                class="form-control" 
                id="name" 
                name="name"
                placeholder="Name"
                 />
                </div>
             </div>
        </div>
        <!-------Menampilkan box Member -------->
        <div class="row">
          <div class="col-sm-2">
              <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="cmember"/>Member
              </div>
          </div>
          <div class="col-sm-5">    
                  <div class="form-group">                    
                      <select class="form-control" name="member">
                      <option value="">Choose the member..</option>
                      <option value="true">True</option>
                      <option value="false">False</option>
                      </select>
                  </div>    
            </div>
        </div>
            <button type="submit" class="btn btn-primary" style="border-radius: 20px;">Search</button>
            
          </div>
          <h1>Options</h1>

          <!---------Menampilkan box Column checkbox------->
          <form action="/projects/column" method="GET">
            <div class="container">
              <div class="row">
                <div class="col-sm-2">
                  <p>Columns</p>
                </div>
                <div class="col-sm-2">
                  <div class="form-check">
                    <input class="form-check-input btn-primary " type="checkbox" name="idChecked"
                     /> ID
                  </div>
                  <div class="form-check">
                    <input class="form-check-input btn-primary" type="checkbox"
                    name="nameChecked" /> Name
                  </div>
                  <div class="form-check">
                    <input class="form-check-input btn-primary" type="checkbox"
                    name="memberChecked" /> Members
                  </div>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-info" style="border-radius: 20px; margin-bottom: 20px;">Search</button>
          </form>   
       
        <!---------Menampilkan box Tabel------->
        
        <table class="table table-striped" border="1">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th scope="col">Action</th>
            </tr>            
     
              <tr>
                  <td>data.id</td>
                  <td>data.dataString</td>
                  <td><a class="btn btn-success" style="border-radius: 15px;" href="edit/">Edit</a>
                      <a class="btn btn-danger" style="border-radius: 10px;" href="deleted/">Delete</a>
                  </td>
                </tr>
            
        </table>
        <a class="btn btn-primary" style="border-radius: 20px;" href="/add">ADD</a>

      
          
    </div>
    
</div>

</form>

