
<% include ../partials/headers %>


<div class="d-flex" id="wrapper" style="margin-top: 3.9%">
<% include ../partials/sidebar %>

    <div class="container" style="padding-top: 20px">
    <form action="/members" method="GET">       
    <input type="hidden" name="page" value="1" /> 
    <h1>Members</h1>
    <h2>Filters</h2>
      <!---------Menampilkan box id------->
    <div class="row" style="margin-top: 30px;">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox"name="ckid" />
                <label class="form-check-label">ID</label>
            </div>
        </div>
        <div class="col-sm-10">
            <div class="form-group">
                <input type="text" class="form-control" id="id" name="id"placeholder="ID"/>
            </div>
          </div>
    </div>
    <!---------Menampilkan box Nama------->
    <div class="row">
        <div class="col-sm-2">
            <div class="form-check">
                <input class="form-check-input" 
                type="checkbox" 
                name="ckname"
                />Name
            </div>
        </div>
        <div class="col-sm-10">
            <div class="form-group">
                <input type="text" class="form-control" id="name" name="name"placeholder="Name"/>
            </div>
          </div>
    </div>
    
        <!-------Menampilkan box Member -------->
        <div class="row">
          <div class="col-sm-2">
              <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="ckmember"/>Member
              </div>
          </div>
          <div class="col-sm-5">
            
            <div class="form-group">                    
              <select class="form-control" name="member">
                <option value="">Choose the member..</option>
                
                  <option value=""></option>  
                
                  </select>
              </div>
            </div>
        </div>
            <button type="submit" class="btn btn-primary" style="border-radius: 20px;">Search</button>
          
          <button a href="/projects" type="submit" class="btn btn-success" style="border-radius: 20px;">Reset</button>
          
        </div>
            
          </div>
        </form>

        <!---------Menampilkan box Column checkbox------->

        <div class="container-fluid mt-4">
                <h2>Options</h2>
                <div class="row">
                    <div class="col-sm-11 ml-5">
                        <div>
                            <form action="/project/optionmember/<%= projectid %>" method="POST">
                                <table width="100%">
                                    <tr>
                                        <td width="23%">Column</td>
                                        <td>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input"
                                                    id="oid" name="oid" value="true"
                                                    <%= option.oid == "true" ? ' checked': ''%>>
                                                <label class="custom-control-label" for="oid">ID</label>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="23%"></td>
                                        <td>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input"
                                                    name="oname" id="oname" value="true"
                                                    <%= option.oname == "true" ? ' checked': '' %>>
                                                <label class="custom-control-label"
                                                    for="oname">Name</label>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="23%"></td>
                                        <td>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input"
                                                    name="orole" value="true" id="orole"
                                                    <%= option.orole == "true" ? ' checked': '' %>>
                                                <label class="custom-control-label"
                                                    for="orole">Position</label>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width=""><a href="#"><button type="submit"
                                                    class="btn btn-primary">Apply</button></a></td>
                                        <td></td>
                                    </tr>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
          
          
</body>

</html>